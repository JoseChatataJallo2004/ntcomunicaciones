    <link href="vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

    <style>

    
        /* Estilos originales para los enlaces de la barra de navegación */
        .navbar-nav li.nav-item.active a.nav-link i.fas {
            color: #218f8b !important;
        }

        .navbar-nav li.nav-item a.nav-link i.fas {
            color: #218f8b !important;
        }

        .navbar-nav li.nav-item a.nav-link span {
            color: #218f8b !important;
        }

        /* Estilo adicional para anular el color y aplicar propiedades a .initials */
        .navbar-nav li.nav-item .profile-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #218f8b; /* Añadido para el fondo circular */
        }

            .navbar-nav li.nav-item .profile-circle .initials {
                color: white !important;
                font-weight: bold;
                font-size: 16px;
                border-radius: 50%; /* Añadido para las iniciales circulares */
            }





        .container {
            max-width: 600px;
            margin: 100px auto;
            text-align: center;
        }

        h1 {
            color: #333;
        }

        /* Switch Styles */
        .switch {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 35px;
            margin-top:10px;
            margin-right:20px;
        }

            .switch input {
                opacity: 0;
                width: 0;
                height: 0;
            }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: 0.4s;
            border-radius: 34px;
        }

            .slider:before {
                position: absolute;
                content: "";
                height: 26px;
                width: 26px;
                left: 4px;
                bottom: 4px;
                background-color: white;
                transition: 0.4s;
                border-radius: 50%;
            }

        input:checked + .slider {
            background-color: #2196F3;
        }

        input:focus + .slider {
            box-shadow: 0 0 1px #2196F3;
        }

        input:checked + .slider:before {
            transform: translateX(26px);
        }

        /* Rounded sliders */
        .slider.round {
            border-radius: 34px;
        }

            .slider.round:before {
                border-radius: 50%;
            }















    </style>




</head>
<body id="page-top">



